<%= render "administration/header", text: t('.header') %>

<table>
  <tr>
    <th>
      <%= t('.depreciation_rows_amount') %>
    </th>
    <td>
      <%= @commodity.depreciation_rows.sum(:summa) %>
    </td>
  </tr>
  <tr>
    <th>
      <%= t('.depreciation_difference_amount') %>
    </th>
    <td>
      <%= @commodity.depreciation_difference_rows.sum(:summa) %>
    </td>
  </tr>
</table>

<br/>

<input type=button value=<%=t('.button_show_hide') %> onclick="showHide('sumu_rows');">

<div id='sumu_rows' style="display: none;">
  <br/><br/>

  <table>
    <tr>
      <th><%= Head::Voucher.human_attribute_name(:tilino) %></th>
      <th><%= Head::Voucher.human_attribute_name(:summa) %></th>
      <th><%= Head::Voucher.human_attribute_name(:tapvm) %></th>
      <th><%= Head::Voucher.human_attribute_name(:selite) %></th>
    </tr>
    <% @commodity.voucher.rows.each do |vourow| %>
      <tr>
        <td><%= vourow.tilino  %></td>
        <td><%= vourow.summa %></td>
        <td><%= vourow.tapvm %></td>
        <td><%= vourow.selite %></td>
      </tr>
    <% end %>
  </table>

</div>
