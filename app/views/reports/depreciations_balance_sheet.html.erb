<%= render "administration/header", title: t("Tase-erittely SUMU poistoin") %>

<table>
  <tr>
    <th><%= t('Tosite')%></th>
    <th><%= t('Hankintahinta') %></th>
    <th><%= t('Tilikauden poistot') %></th>
    <th><%= t('Menojäännös') %></th>
  </tr>
  <!-- Kaikki tilit loop -->
  <% @report.data.each do |f, v| %>
    <tr>
      <td><%= f %> = <%= v[:nimi] %></td>
    </tr>
    <tr>
      <td align='right'><%= t('Poistoaika') %> <%= "#{v[:poistoaika]}" + t('kk')  %></td>
    </tr>
    <!-- Kaikki tilikaudet loop -->
    <% v[:tilikaudet].each do |tk, v| %>
      <tr>
        <td><%= t('Tilikausi')%></td>
        <td colspan='100%'><%= v[:tilikausi] %></td>
      </tr>
      <tr>
        <td><%= t('Tilikausi yht.') %></td>
        <td><%= v[:hankinnat] %></td>
        <td><%= v[:tilikauden_poistot] %></td>
        <td><%= v[:menojaannos] %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= t('Yhteensä tili') %></td>
      <td><%= v[:hankinnat_yht] %></td>
      <td><%= v[:tilikauden_poistot_yht] %></td>
      <td><%= v[:menojaannos_yht] %></td>
    </tr>
    <tr><td colspan='100%' height='30'></td></tr>
  <% end %>
</table>
