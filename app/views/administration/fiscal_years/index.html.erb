<%= render "administration/header", title: "Yrityksen tilikaudet" %>

<%= button_to t('Uusi tilikausi'), new_fiscal_year_path, method: :get if update_access? %>

<br/><br/>
<%= form_tag fiscal_years_path, method: :get do %>
  <table>
    <tr>
      <th>
        <%= sortable 'tilikausi_alku' %>
        <br/>
        <%= date_field_tag :tilikausi_alku, params[:tilikausi_alku] %>
      </th>

      <th>
        <%= sortable 'tilikausi_loppu' %>
        <br/>
        <%= date_field_tag :tilikausi_loppu, params[:tilikausi_loppu] %>
      </th>

      <th class="back">
        <%= submit_tag t('Etsi') %>
      </th>
    </tr>

    <% @fiscal_years.each do |fiscal_year| %>
      <tr class="aktiivi">
        <td>
          <% if update_access? %>
            <%= link_to l(fiscal_year.tilikausi_alku, format: :short), edit_fiscal_year_path(fiscal_year.id) %>
          <% else %>
            <%= l fiscal_year.tilikausi_alku, format: :short %>
          <% end %>
        </td>
        <td>
          <%= l fiscal_year.tilikausi_loppu, format: :short %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<br/>

<%= button_to t('Uusi tilikausi'), new_fiscal_year_path, method: :get if update_access? %>
