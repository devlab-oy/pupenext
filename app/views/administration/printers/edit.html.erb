<%= return_link t('administration.printers.index.header'), printers_path %>

<br/>

<%= render "administration/header", text: t('administration.printers.edit.header') %>
<%= render 'form', printer: @printer %>

<% if @printer.persisted? && update_access? %>
  <br/>

  <%= button_to(t('.button_remove'),
                printer_path(@printer.id),
                data: { confirm: t('administration.printers.edit.confirm_remove') },
                method: "delete") %>
<% end %>
