  <%= f.fields_for :departures do |departure| %>
    <%= render 'departure_fields', f: departure %>
  <% end %>
</table>

<br>

<%= link_to_add_association t('administration.delivery_methods.departures.link_new'), f, :departures,
    data: { association_insertion_method: :append, association_insertion_node: '#departures'},
    partial: 'departure_fields' %>
